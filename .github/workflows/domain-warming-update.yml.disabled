name: Domain Warming - Update TBP Batch Sizes

on:
  schedule:
    # Run every Monday at 6am PT (2pm UTC during PST, 1pm UTC during PDT)
    # Using 2pm UTC covers both scenarios
    - cron: '0 14 * * 1'
  workflow_dispatch:
    inputs:
      force_week:
        description: 'Force specific week number (optional)'
        required: false
        type: number

jobs:
  update-batch-sizes:
    runs-on: ubuntu-latest
    timeout-minutes: 20

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          token: ${{ secrets.GITHUB_TOKEN }}

      - name: Calculate current warming week
        id: week
        run: |
          CONFIG=$(cat .github/warming-config.json)

          # Use TBP start date for week calculation (both campaigns start same date)
          START_DATE=$(echo $CONFIG | jq -r '.tbp.startDate')

          # Calculate weeks since start
          START_EPOCH=$(date -d "$START_DATE" +%s)
          NOW_EPOCH=$(date +%s)
          DAYS_ELAPSED=$(( (NOW_EPOCH - START_EPOCH) / 86400 ))

          # Handle negative days (before start date)
          if [ $DAYS_ELAPSED -lt 0 ]; then
            WEEK_NUM=1
          else
            WEEK_NUM=$(( (DAYS_ELAPSED / 7) + 1 ))
          fi

          # Override if force_week provided
          if [ -n "${{ inputs.force_week }}" ]; then
            WEEK_NUM=${{ inputs.force_week }}
          fi

          echo "week=$WEEK_NUM" >> $GITHUB_OUTPUT
          echo "Current warming week: $WEEK_NUM"

      - name: Get batch sizes for current week
        id: batch
        run: |
          CONFIG=$(cat .github/warming-config.json)
          WEEK=${{ steps.week.outputs.week }}

          # TBP batch size
          TBP_MAX_BATCH=$(echo $CONFIG | jq -r '.tbp.maxBatchSize')
          TBP_BATCH_SIZE=$(echo $CONFIG | jq -r --argjson week "$WEEK" '
            .tbp.schedule |
            map(select(.week <= $week)) |
            last |
            .batchSize
          ')
          if [ "$TBP_BATCH_SIZE" = "null" ] || [ -z "$TBP_BATCH_SIZE" ]; then
            TBP_BATCH_SIZE=$TBP_MAX_BATCH
          fi

          # PreIntake batch size
          PREINTAKE_MAX_BATCH=$(echo $CONFIG | jq -r '.preintake.maxBatchSize')
          PREINTAKE_BATCH_SIZE=$(echo $CONFIG | jq -r --argjson week "$WEEK" '
            .preintake.schedule |
            map(select(.week <= $week)) |
            last |
            .batchSize
          ')
          if [ "$PREINTAKE_BATCH_SIZE" = "null" ] || [ -z "$PREINTAKE_BATCH_SIZE" ]; then
            PREINTAKE_BATCH_SIZE=$PREINTAKE_MAX_BATCH
          fi

          echo "batch_size=$TBP_BATCH_SIZE" >> $GITHUB_OUTPUT
          echo "preintake_batch_size=$PREINTAKE_BATCH_SIZE" >> $GITHUB_OUTPUT
          echo "TBP batch size for week $WEEK: $TBP_BATCH_SIZE"
          echo "PreIntake batch size for week $WEEK: $PREINTAKE_BATCH_SIZE"

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'

      - name: Install dependencies
        run: npm install firebase-admin

      - name: Update Firestore config document
        id: update
        run: |
          node << 'EOF'
          const admin = require('firebase-admin');

          // Initialize with service account from secret
          const serviceAccount = JSON.parse(process.env.FIREBASE_SERVICE_ACCOUNT);
          admin.initializeApp({
            credential: admin.credential.cert(serviceAccount)
          });

          const db = admin.firestore();
          const tbpBatch = parseInt(process.env.TBP_BATCH);
          const preintakeBatch = parseInt(process.env.PREINTAKE_BATCH);
          const week = parseInt(process.env.WEEK);

          async function updateConfig() {
            const configRef = db.collection('config').doc('emailCampaign');

            // Get current values
            const doc = await configRef.get();
            const currentTbpBatch = doc.exists ? doc.data().batchSize : null;
            const currentPreintakeBatch = doc.exists ? doc.data().preintakeBatchSize : null;

            console.log(`Current TBP batch size: ${currentTbpBatch || 'not_set'}`);
            console.log(`Target TBP batch size: ${tbpBatch}`);
            console.log(`Current PreIntake batch size: ${currentPreintakeBatch || 'not_set'}`);
            console.log(`Target PreIntake batch size: ${preintakeBatch}`);

            const tbpChanged = currentTbpBatch !== tbpBatch;
            const preintakeChanged = currentPreintakeBatch !== preintakeBatch;

            if (!tbpChanged && !preintakeChanged) {
              console.log('No update needed');
              return;
            }

            // Update Firestore
            await configRef.set({
              batchSize: tbpBatch,
              preintakeBatchSize: preintakeBatch,
              warmingWeek: week,
              updatedAt: admin.firestore.FieldValue.serverTimestamp(),
              updatedBy: 'github-actions'
            }, { merge: true });

            console.log(`Updated Firestore config:`);
            console.log(`  - TBP batch size: ${tbpBatch}`);
            console.log(`  - PreIntake batch size: ${preintakeBatch}`);
            console.log(`  - Warming week: ${week}`);
          }

          updateConfig()
            .then(() => process.exit(0))
            .catch(err => {
              console.error('Error:', err);
              process.exit(1);
            });
          EOF
        env:
          FIREBASE_SERVICE_ACCOUNT: ${{ secrets.FIREBASE_SERVICE_ACCOUNT }}
          TBP_BATCH: ${{ steps.batch.outputs.batch_size }}
          PREINTAKE_BATCH: ${{ steps.batch.outputs.preintake_batch_size }}
          WEEK: ${{ steps.week.outputs.week }}

      - name: Summary
        run: |
          echo "## Domain Warming Summary" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "- **Warming Week**: ${{ steps.week.outputs.week }}" >> $GITHUB_STEP_SUMMARY
          echo "- **TBP Batch Size**: ${{ steps.batch.outputs.batch_size }}" >> $GITHUB_STEP_SUMMARY
          echo "- **PreIntake Batch Size**: ${{ steps.batch.outputs.preintake_batch_size }}" >> $GITHUB_STEP_SUMMARY
          echo "- **Status**: Updated Firestore config/emailCampaign document" >> $GITHUB_STEP_SUMMARY
